@import nib
@import '_grid'

total-width = 100%

*, *::before, *::after, {
  box-sizing border-box
}

body {
  padding 1em 3em
  font-family lato
}

a {
  text-decoration none
  color #000
  &.active {
    border-bottom 1px solid #777
  }
}

h1, h2, h3, h4, h5, h6 {
  font-weight 300
}

nav {
  font-size 1.275em
  margin 0 0 2em
  ul{
    clearfix()
    list-style none
    margin 0
    padding 0
    font-weight 100
    li {
      float left
      &+li {
        margin-left 1em
      }
    }
  }
}

#new-todo {
  width 30em
  border 1px solid #ccc
  padding 0.5em
  border-radius 4px
  box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.1)
  transition all 175ms ease-in
  &:focus {
    outline none
    border-color #777
    box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.2)
  }
}

#todo-list {
  margin 1em 0.725em
  width 100%
  ul {
    padding 0
    margin 0
    list-style none
    li {
      clearfix()
      padding 1em 0
      row(12)
      border-bottom 1px solid #eee
      border-left 1px solid #eee
      box-shadow inset 1px -1px 5px rgba(0, 0, 0, 0.05)
      .completed {
        column(1)
        .complete {
          border none
          background-color transparent
          color green
          &.done {
            transform scale(0.75)
            color lighten(@color, 25%)
          }
          &:focus, &:active {
            outline none
          }
        }
      }
      .complete, .remove {
        text-shadow 0px 0px 2px #000, 1px 1px 5px rgba(0, 0, 0, 0.25)
        transition all 175ms ease-in
        padding 5px
        &:hover {
          transform scale(1.75)
        }
      }
      .task {
        column(10)
        font-weight 300
        &.done {
          text-decoration line-through
        }
      }
      .actions {
        text-align center
        column(1)
        .remove {
          border none
          background transparent
          color red
        }
      }
    }
  }
}

#todo-list-footer {
  clearfix()
  width 100%
  .clear, .count, .completed, .view-complete, .view-incomplete, .incomplete-tasks {
    font-size 0.725em
    text-align right
    text-transform uppercase
  }
  .clear {
    column(2)
    offset(2)
    button {
      border none
      background-color transparent
      color red
      text-shadow 0 0 1px #000, 1px 1px 1px #000
      font-weight 500
      text-transform inherit
    }
  }
  .view-complete, .view-incomplete {
    column(2)
    button {
      background transparent
      border none
    }
    text-align left
  }
  .count {
    column(1)
  }
  .completed {
    column(1)
  }
  .incomplete-tasks {
    column(2)
  }
}
